#admin_members
  %header
    %h2= t("admin.members.titles.edit")

  %section#main
    = form_for [:admin, @member] do |form|
      %fieldset
        = form.label  :name
        = form.text_field :name, :placeholder => "John Resig"
        = render :partial => "shared/error_on_field", :locals => {:resource => @member, :field => :name}
      %fieldset
        = form.label :email
        = form.text_field :email, :placeholder => "jresig@example.com"
        = render :partial => "shared/error_on_field", :locals => {:resource => @member, :field => :email}
      .buttons
        = form.submit t("admin.members.actions.update_member"), :class => 'button center'
    -if admin?
      %br{ :style => 'clear: both;' }
      =link_to t("admin.members.actions.delete_member"), [:admin, @member], { :class => 'button negative left' }, :method => 'delete', :confirm => 'Are you sure you want to delete the user?'
      =link_to t("admin.members.actions.edit_memberships_for_member"), admin_member_memberships_path(@member), { :class => 'button positive right' }
