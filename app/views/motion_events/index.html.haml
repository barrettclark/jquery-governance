=div_for(@motion) do
  #motion-details
    %h2
      = @motion.title
      %span.author by #{@motion.member.name_or_email}
    .description
      %p= @motion.description
    .rationale
      %h4 Rationale
      %p= @motion.rationale
    %h3 Events
    %ul#motion-events
      - @motion.events.each do |event|
        %li= render event
    #tags
      = render 'taggings/index', :tags => @tags, :remote_flash => nil
  #motion-actions
    %dl
      %dt State
      %dd
        Currently
        %span.current_state= state_description_for_motion(@motion)
      %dt Expedited
      %dd= @motion.expedited? ? 'Yes' : 'No'
    - if member? && current_member.can?(:second, @motion)
      =link_to "Second This Motion", motion_second_path(@motion), :class => "quick-tool", :method => :post, :remote => true
    - if member? && current_member.can?(:vote, @motion)
      =link_to "Aye", motion_vote_path(@motion, :vote => :aye), :class => "quick-tool", :method => :post, :remote => true
      =link_to "Nay", motion_vote_path(@motion, :vote => :nay), :class => "quick-tool", :method => :post, :remote => true
    - if member? && current_member.can?(:object, @motion)
      =link_to "Object This Motion", motion_object_path(@motion), :class => "quick-tool", :method => :post, :remote => true
