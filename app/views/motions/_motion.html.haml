#motion
  %h1
    =motion.title
  %p.meta
    %span.created_at
      Created on #{motion.created_at.to_date}
    %span.author
      by #{motion.member.name}
    %span.current_state
      and currently #{motion.state(:format => :human)}
  %p.description
    =motion.description
  %p.rationale
    =motion.rationale
