#motion
  %h1= motion.title
  %p.meta
    %span.created_at== Created on #{motion.created_at.to_date}
    %span.author== by #{motion.member.name}
    %span.current_state== and currently #{motion.state(:format => :human)}
  %p.description= motion.description
  %p.rationale= motion.rationale
  - if motion.history(current_member) && motion.history(current_member).size > 0
    %p.history
      %h3 History:
      = render :partial => 'history', :collection => @motion.history(current_member)
