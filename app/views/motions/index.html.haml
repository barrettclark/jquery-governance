%div{ :class => "motions #{@motions[:name]}" }
  - if active_member?
    = link_to "New Motion", new_motion_path, { :class => 'button positive' }
  %h1= t("motions.titles.index.#{@motions[:name]}")
  - @motions[:groups].each do |name, motions|
    = render :partial => "motions/motion_group", :locals => {:name => name, :motion_group => motions}

